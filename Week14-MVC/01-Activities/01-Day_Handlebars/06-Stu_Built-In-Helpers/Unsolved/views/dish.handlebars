<!-- this html opens single instance of page -->

<div class="dish-card">
  <div class="dish-card-header">
    {{dish_name}}
  </div>
  <div class="card-body">
    <p>
      Description:
      {{description}}
    </p>
    <!-- TODO: Use a built-in helper to display "Contains Nuts" if a food item contains nuts.-->
    {{#if has_nuts}}
    <p class="has-nuts">
      contains nuts
    </p>
    {{/if}}
  </div>
</div>